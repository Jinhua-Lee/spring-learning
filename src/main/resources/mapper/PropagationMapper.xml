<?xml version="1.0" encoding="UTF8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.demo.springlearning.test.tx.PropagationMapper">

    <insert id="addCommodities" parameterType="cn.demo.springlearning.test.entity.Commodity">
        insert into commodity(name, price, produceCity)
        values
        <foreach collection="commodities" item="commodity" separator=", ">
            (#{commodity.name}, #{commodity.price}, #{commodity.produceCity})
        </foreach>
    </insert>

    <!--新增客户-->
    <insert id = "addCustomers" parameterType = "cn.demo.springlearning.test.entity.Customer">
        insert into customer(name, gender, age)
        values
        <foreach collection = "customers" item = "cus" separator = ", ">
            (#{cus.name}, #{cus.gender}, #{cus.age})
        </foreach>
    </insert>

</mapper>
